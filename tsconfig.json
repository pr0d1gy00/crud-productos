{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ESNext"],
		"strict": false,
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ESNext",
		"moduleResolution": "Nodenext",
		"module": "NodeNext"
		
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}